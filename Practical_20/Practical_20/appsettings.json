{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"Default": "Data Source=SF-CPU-391\\SIMFORM; Initial Catalog=Practical20_DB; User Id=jay; Password=Simform@123; TrustServerCertificate=true; MultipleActiveResultSets=true;"
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "/Practical_20_Logs/Practical_20_Log-.txt",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
					"rollingInterval": "Hour",
					"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
	}
}
